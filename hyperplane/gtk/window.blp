using Gtk 4.0;
using Adw 1;

// This needs to be up top because of the custom attributes
menu view {
  section {
    label: _("View");

    item {
      label: _("Grid");
      action: "app.change-view";
      target: "grid";
    }

    item {
      label: _("List");
      action: "app.change-view";
      target: "list";
    }
  }

  section {
    label: _("Size");
    display-hint: "inline-buttons";

    item {
      custom: "zoom-out";
    }

    item {
      custom: "zoom-in";
    }
  }

  section {
    label: _("Sort");

    item {
      label: _("Aâ†’Z");
      action: "app.sort";
      target: "a-z";
    }

    item {
      label: _("Date Modified");
      action: "app.sort";
      target: "modified";
    }

    item {
      label: _("Date Created");
      action: "app.sort";
      target: "created";
    }

    item {
      label: _("Size");
      action: "app.sort";
      target: "size";
    }

    item {
      label: _("Type");
      action: "app.sort";
      target: "type";
    }
  }

  section {
    item (_("Reverse"), "app.reverse-sort")
  }
}

template $HypWindow : Adw.ApplicationWindow {
  width-request: 360;
  height-request: 176;
  content:
  Adw.TabOverview tab_overview {
    view: tab_view;
    enable-new-tab: true;

    Adw.ToastOverlay toast_overlay {
      Adw.OverlaySplitView overlay_split_view {
        // Taken from Nautilus
        max-sidebar-width: 240;
        sidebar-width-unit: px;
        sidebar-width-fraction: .2;
        sidebar: Adw.NavigationPage {
          title: _("Hyperplane");
          child:
          Adw.ToolbarView {
            [top]
            Adw.HeaderBar {
              [start]
                ToggleButton hide_sidebar_button {
                visible: false;
                icon-name: "sidebar-show-symbolic";
                tooltip-text: _("Hide Sidebar");
                active: bind overlay_split_view.show-sidebar bidirectional inverted;
              }

              [end]
              MenuButton {
                primary: true;
                icon-name: "open-menu-symbolic";
                tooltip-text: _("Menu");
                popover:
                PopoverMenu {
                  menu-model: primary_menu;
                };
              }
            }

            ScrolledWindow {
              Box {
                orientation: vertical;

                ListBox sidebar {
                  selection-mode: none;
                  $HypEditableRow recent_row {
                    icon-name: "document-open-recent-symbolic";
                    title: _("Recent");
                    identifier: "file_recent:///";
                  }
                  $HypEditableRow home_row {
                    icon-name: "user-home-symbolic";
                    title: _("Home");
                    editable: false;
                    identifier: "special_home";
                  }

                  styles [
                    "navigation-sidebar",
                  ]
                }
                Separator {
                  margin-start: 6;
                  margin-end: 6;
                }
                ListBox new_tag_box {
                  selection-mode: none;
                  Box {
                    spacing: 12;
                    margin-start: 6;
                    Image {
                      icon-name: "bookmark-new-symbolic";
                    }
                    Label {
                      ellipsize: end;
                      label: _("New Category");
                    }
                  }

                  styles [
                    "navigation-sidebar",
                  ]
                }
                Separator {
                  margin-start: 6;
                  margin-end: 6;
                }
                ListBox trash_box {
                  selection-mode: none;
                  $HypEditableRow trash_row {
                    title: _("Trash");
                    editable: false;
                    identifier: "file_trash:///";
                  }

                  styles [
                    "navigation-sidebar",
                  ]
                }
                Separator {
                  margin-start: 6;
                  margin-end: 6;
                  visible: bind volumes_box.has-any;
                }
                $HypVolumesBox volumes_box {}
              }
            }

            [bottom]
            ActionBar sidebar_action_bar {
              revealed: false;

              Button {
                margin-start: 6;
                margin-top: 3;
                margin-bottom: 3;
                hexpand: true;
                label: _("Done");
                action-name: "win.end-edit-sidebar";

                styles [
                  "suggested-action"
                ]
              }
            }
          }

          ;
        }

        ;
        content:
        Adw.ToolbarView toolbar_view {

          [top]
          Adw.HeaderBar header_bar {
            [start]
            ToggleButton show_sidebar_button {
              visible: false;
              icon-name: "sidebar-show-symbolic";
              tooltip-text: _("Show Sidebar");
              active: bind overlay_split_view.show-sidebar bidirectional;
            }

            [start]
            Button header_bar_back {
              icon-name: "go-previous-symbolic";
              action-name: "win.back";
              tooltip-text: _("Back");
            }

            [start]
            Button header_bar_forward {
              icon-name: "go-next-symbolic";
              action-name: "win.forward";
              tooltip-text: _("Forward");
            }

            [title]
            Stack title_stack {
              transition-type: crossfade;
              transition-duration: 100;

              Adw.Clamp path_bar_clamp {
                $HypPathBar path_bar {}
              }

              Adw.Clamp path_entry_clamp {
                $HypPathEntry path_entry {}
              }

              Adw.Clamp search_entry_clamp {
                SearchEntry search_entry {
                }
              }
            }

            [end]
            MenuButton header_bar_view_button {
              tooltip-text: _("View");
              popover: header_bar_view_popover;
            }

            [end]
            ToggleButton search_button {
              icon-name: "system-search-symbolic";
              tooltip-text: _("Search");
            }
          }

          [top]
          Adw.TabBar tab_bar {
            view: tab_view;
          }

          [top]
          Adw.Banner banner {
            button-clicked => $_banner_button_clicked();
          }

          Adw.TabView tab_view {}

          [bottom]
          ActionBar action_bar {
            revealed: false;

            [start]
            Button {
              icon-name: "go-previous-symbolic";
              action-name: "win.back";
              tooltip-text: _("Back");
            }

            [start]
            Button {
              icon-name: "go-next-symbolic";
              action-name: "win.forward";
              tooltip-text: _("Forward");
            }

            [end]
            MenuButton action_bar_view_button {
              tooltip-text: _("View");
              popover: action_bar_view_popover;
            }
          }
        }

        ;
      }
    }
  }

  ;

  styles [
    "view",
  ]

  Adw.Breakpoint {
    condition ("max-width: 682sp") // Value taken from Nautilus
    setters {
      overlay_split_view.collapsed: true;
      show_sidebar_button.visible: true;
      hide_sidebar_button.visible: true;
      header_bar_back.visible: false;
      header_bar_forward.visible: false;
      header_bar_view_button.visible: false;
      action_bar.revealed: true;
    }
  }
}

PopoverMenu header_bar_view_popover {
  menu-model: view;

  [zoom-out]
  Button {
    margin-start: 12;
    icon-name: "zoom-out-symbolic";
    action-name: "win.zoom-out";
    tooltip-text: _("Zoom Out");

    styles [
      "flat",
    ]
  }

  [zoom-in]
  Button {
    icon-name: "zoom-in-symbolic";
    action-name: "win.zoom-in";
    tooltip-text: _("Zoom In");

    styles [
      "flat",
    ]
  }
}

PopoverMenu action_bar_view_popover {
  menu-model: view;

  [zoom-out]
  Button {
    margin-start: 12;
    icon-name: "zoom-out-symbolic";
    action-name: "win.zoom-out";
    tooltip-text: _("Zoom Out");

    styles [
      "flat",
    ]
  }

  [zoom-in]
  Button {
    icon-name: "zoom-in-symbolic";
    action-name: "win.zoom-in";
    tooltip-text: _("Zoom In");

    styles [
      "flat",
    ]
  }
}

Popover rename_popover {
  position: bottom;
  width-request: 400;

  Box {
    orientation: vertical;
    margin-start: 24;
    margin-end: 24;
    margin-top: 12;
    margin-bottom: 24;
    spacing: 15;

    Label rename_label {
      styles [
        "title-2",
      ]
    }

    Adw.PreferencesGroup {
      Adw.EntryRow rename_entry {
        title: _("Name");
      }

      Revealer rename_revealer {
        margin-start: 6;
        margin-end: 6;
        margin-top: 12;

        Label rename_revealer_label {
          wrap: true;
        }
      }

      Button rename_button {
        margin-top: 12;
        label: _("Rename");

        styles [
          "suggested-action",
          "pill",
        ]
      }
    }
  }
}

PopoverMenu right_click_menu {
  halign: start;
  menu-model: right_click;
  has-arrow: false;
}

PopoverMenu file_right_click_menu {
  halign: start;
  menu-model: file_right_click;
  has-arrow: false;
}

PopoverMenu tag_right_click_menu {
  halign: start;
  menu-model: tag_right_click;
  has-arrow: false;
}


