{
    "id" : "hu.kramo.Hyperplane.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "hyperplane",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-data/Trash",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--own-name=org.freedesktop.FileManager1"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtests=false",
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled",
                "-Dbackend-qt5=disabled",
                "-Ddocs=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/flatpak/libportal/releases/download/0.7.1/libportal-0.7.1.tar.xz",
                    "sha256": "297b90b263fad22190a26b8c7e8ea938fe6b18fb936265e588927179920d3805"
                }
            ]
        },
        {
            "name": "gnome-desktop",
            "buildsystem": "meson",
            "config-opts": [
              "-Ddebug_tools=false",
              "-Ddesktop_docs=false",
              "-Dudev=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/44/gnome-desktop-44.0.tar.xz",
                    "sha256": "42c773745d84ba14bc1cf1c4c6f4606148803a5cd337941c63964795f3c59d42",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-desktop"
                    }
                }
            ]
          },      
        {
            "name": "totem-pl-parser",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/totem-pl-parser/3.26/totem-pl-parser-3.26.6.tar.xz",
                    "sha256": "c0df0f68d5cf9d7da43c81c7f13f11158358368f98c22d47722f3bd04bd3ac1c",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "totem-pl-parser"
                    }
                }
            ]
        },
        {
            "name": "totem-video-thumbnailer",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/totem-video-thumbnailer.git",
                    "commit": "78ddf6c113d439d8ad9ff1453cf433592fabe9fd"
                }
            ]
        },
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag" : "v0.10.0"
                }
            ],
            "cleanup" : [
                "*"
            ]
        },
        {
            "name" : "hyperplane",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
